package smtpapp;

import javax.swing.*;
import javax.swing.border.EmptyBorder;
import java.awt.*;

public class EmailFrame extends JDialog {

    public EmailFrame(Frame owner, String from, String subject, String date, String body) {
        super(owner, "Xem Email: " + subject, true);
        setSize(700, 500);
        setLocationRelativeTo(owner);
        setLayout(new BorderLayout());
        
        // Header thÃ´ng tin
        JPanel header = new JPanel(new GridLayout(3, 1));
        header.setBorder(new EmptyBorder(15, 15, 15, 15));
        header.setBackground(new Color(230, 240, 255));
        
        header.add(new JLabel("ðŸ“§ Tá»«: " + from));
        header.add(new JLabel("ðŸ“‹ TiÃªu Ä‘á»: " + subject));
        header.add(new JLabel("âŒš NgÃ y gá»­i: " + date));
        add(header, BorderLayout.NORTH);

        // Ná»™i dung thÆ°
        JTextArea bodyArea = new JTextArea(body);
        bodyArea.setFont(new Font("Segoe UI", Font.PLAIN, 15));
        bodyArea.setEditable(false);
        bodyArea.setLineWrap(true);
        bodyArea.setWrapStyleWord(true);
        
        JScrollPane scroll = new JScrollPane(bodyArea);
        scroll.setBorder(BorderFactory.createTitledBorder("Ná»™i dung Ä‘Ã£ giáº£i mÃ£"));
        add(scroll, BorderLayout.CENTER);
        
        // Footer (Close button)
        JPanel footer = new JPanel(new FlowLayout(FlowLayout.RIGHT));
        JButton closeBtn = new JButton("ÄÃ³ng");
        closeBtn.addActionListener(e -> dispose());
        footer.add(closeBtn);
        add(footer, BorderLayout.SOUTH);
    }

    public static void showEmail(Frame owner, String from, String subject, String date, String body) {
        new EmailFrame(owner, from, subject, date, body).setVisible(true);
    }
}
